<Window x:Name="window" x:Class="PointGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointGUI"
        mc:Ignorable="d"
        Title="Point Test App" Height="600
        " Width="800" WindowStartupLocation="CenterScreen" MinWidth="800" MinHeight="600" MaxWidth="800">
    <Grid>
        <ListView x:Name="PointListBox" Margin="0,0,489,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="X" DisplayMemberBinding="{Binding X}" />
                    <GridViewColumn Header="Y" DisplayMemberBinding="{Binding Y}" />
                    <GridViewColumn Header="Z" DisplayMemberBinding="{Binding Z}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="CreateRepositoryButton" Content="Add Repository" HorizontalAlignment="Left" Margin="433,10,0,0" VerticalAlignment="Top" Click="CreateRepositoryClick"/>
        <Button x:Name="ReadRepositoryButton" Content="Refresh" HorizontalAlignment="Left" Margin="327,10,0,0" VerticalAlignment="Top" Click="ReadRepositoryClick" />
        <Button x:Name="AddPointButton" Content="Add Point" HorizontalAlignment="Left" Margin="366,319,0,0" VerticalAlignment="Top" Click="AddPointClick" />
        <Button x:Name="CalculateDistanceButton" Content="Distance" HorizontalAlignment="Left" Margin="642,332,0,0" VerticalAlignment="Top" Click="CalculateDistanceButtonClick" />
        <Button x:Name="CalculateVolumeButton" Content="Volume" HorizontalAlignment="Left" Margin="642,376,0,0" VerticalAlignment="Top" Click="CalculateVolumeButtonClick" />
        <Button x:Name="IsInSphereCheckButton" Content="Is In Sphere" HorizontalAlignment="Left" Margin="642,376,0,0" VerticalAlignment="Top" Click="IsInSphereCheckButtonClick"/>
        <Button x:Name="EditPointButton" Content="Edit Point" HorizontalAlignment="Left" Margin="366,356,0,0" VerticalAlignment="Top" Click="EditPointButtonClick" />
        <Button x:Name="DeletePointButton" Content="Delete Point" HorizontalAlignment="Center" Margin="0,391,0,0" VerticalAlignment="Top" Click="DeletePointButtonClick" />
        <ComboBox x:Name="RepositoryComboBox" HorizontalAlignment="Left" Margin="547,10,0,0" VerticalAlignment="Top" Width="144" Height="20" DisplayMemberPath="Name" SelectionChanged="RepositoryComboBoxSelectionChanged"/>
        <Button x:Name="DeleteRepositoryButton" Content="Delete Repository" HorizontalAlignment="Left" Margin="593,50,0,0" VerticalAlignment="Top" Click="DeleteRepositoryClick"/>
    </Grid>
</Window>
