<Window x:Class="PointGUI.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointGUI"
        mc:Ignorable="d"
        Title="ResultWindow"
        SizeToContent="WidthAndHeight" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label x:Name="ResultLabel" HorizontalAlignment="Center" Margin="10,30,10,0" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <Label x:Name="ResultMessageLabel" Content="Message" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center"/>
                <TextBox x:Name="ResultValueTextBox" Margin="5,0,0,0" TextWrapping="Wrap" Text="Result" VerticalAlignment="Center" AllowDrop="False" UndoLimit="0" HorizontalAlignment="Right" IsReadOnly="True"/>
            </StackPanel>
        </Label>
        <Button x:Name="OkButton" Content="OK" HorizontalAlignment="Center" Margin="0,137,0,10" IsDefault="True" Grid.Row="2" Grid.Column="1" Click="OkButtonClick"/>


    </Grid>
</Window>
